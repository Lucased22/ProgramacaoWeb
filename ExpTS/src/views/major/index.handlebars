<div class="d-flex justify-content-between align-items-start">
  <h2>Listagem de cursos</h2>
  <h4><a href="/majors/create"><i class="bi bi-plus-square"></i></a></h4>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Código</th>
      <th scope="col">Nome</th>
      <th class="text-end">Opções</th>
    </tr>
  </thead>
  <tbody>
    {{#each majors}}
    <tr>
      <td>{{code}}</td>
      <td>{{name}}</td>
      <td class="text-end">
        <a href="/majors/read/{{id}}"><i class="bi bi-eye"></i></a>
        <a href="/majors/update/{{id}}"><i class="bi bi-pencil"></i></a>
        <a href="/majors/remove/{{id}}"><i class="bi bi-trash"></i></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>