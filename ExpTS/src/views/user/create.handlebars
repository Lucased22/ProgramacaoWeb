<div class="d-flex justify-content-between align-items-center">
    <h2>Criação de Usuário</h2>
    <h4><a href= "/users"><i class="bi bi-arrow-left-square"></i> </a></h4>
</div>
<form action="/users/{{#if user}}update/{{user.id}}{{else}}create{{/if}}" method="post">
    <div class="mb-3">
        <label for="fullname" class="form-label">Nome</label>
        <input value="{{user.fullname}}" name="fullname" type="text" class="form-control" id="fullname" >
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input value="{{user.email}}" name="email" type="text" class="form-control" id="email" >
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Senha</label>
        <input name="password"class="form-control" id="password" rows="3"></input>
    </div>
    <div class="form-curso">
        <label for="major_id" class="form-label">Curso</label>
        <select class="form-select" name="major_id" id="major_id" aria-label="Default select example">
            {{#each majors}}
                <option value={{id}}>{{name}}</option>
            {{/each}}
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Criar Usuário</button>
</form>